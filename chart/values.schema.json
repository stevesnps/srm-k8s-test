{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "title": "Values",
    "type": "object",
    "properties": {
        "sizing": {
            "type": "object",
            "default": {},
            "title": "sizing",
            "required": [
                "size",
                "version"
            ],
            "properties": {
                "size": {
                    "type": "string",
                    "default": "",
                    "title": "size",
                    "pattern": "^(Unspecified|ExtraSmall|Small|Medium|Large|ExtraLarge)$"
                },
                "version": {
                    "type": "string",
                    "default": "",
                    "title": "version",
                    "pattern": "^(v1.0)$"
                }
            }
        }        
    }
}